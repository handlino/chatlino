<% form_tag session_path do -%>

<p>
    <label>Sign in using</label>
    <%= select :loginprovider, :name,  [['OpenID','openid'],['Chatlino','chatlino']] %>
</p>

<div id="openid" class="loginprovider basic-form">
    <label for="openid_url">OpenID</label>
    <%= text_field_tag "openid_url", "http://", :class => "large-text" %>

    <div class="remember-me clearfix">
        <%= check_box_tag 'openid_remember_me' %>
        <label for="openid_remember_me">Remember this URL</label>
    </div>
    
    <p><%= submit_tag 'Sign In', :class => :button %></p>
</div>

<div id="chatlino" class="loginprovider basic-form">
    <label for="login">Screen Name</label>
    <%= text_field_tag 'login', {}, :class => "large-text" %>
    <p>Only <strong>alphabet</strong>, <strong>numbers</strong>, and <strong>_</strong> are allowed</p>

    <label for="password">Password</label>
    <%= password_field_tag 'password', {}, :class => "large-text" %>

    <div class="remember-me clearfix">
        <%= check_box_tag 'remember_me' %>
        <label for="remember_me">Remember me</label>
    </div>

    <p>Do not have account? <%= link_to '<strong>Sign up first!</strong>', signup_path, :class => "dark" %></p>    
    
    <p><%= submit_tag 'Sign In', :class => :button %></p>
</div>

<% end -%>

