<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Chatlino</title>
        <%= stylesheet_link_tag "blueprint/screen.css" %>
        <%= stylesheet_link_tag *(['main'] + @stylesheets) %>
        <%= javascript_include_tag 'prototype', 'jquery', 'jquery-noconflict', 'effects', 'controls', 'jquery-cookie', 'login', 'application', *(@javascripts) %>
    </head>

    <body id="<%= controller.controller_name %>">

        <div id="container-background-right">
        <div id="container-background-left" class="chatlino container">
            <div id="container" class="span-1">

                <div id="hd" class="span-18 last">
                    <div id="left-head" class="span-1">
                      <%= link_to image_tag("logo.png", :class => "logo"), root_path %>
                      <% if controller.controller_name =="chatrooms" && controller.action_name =="index" %>
                        <%= image_tag "title-list.png", :class => "title" %>
                      <% end %>
                    </div>
                    <div id="right-head" class="span-1">&nbsp;</div>
                </div>

                <div id="bd">
                    <div class="inner">
                        <div id="message">
                           <%= @message %>
                           <% if flash[:notice] %><div class="flash_notice"><p><%= flash[:notice] %></p></div><% end %>
                           <% if flash[:error] %><div class="flash_error"><p><%= flash[:error] %></p></div><% end %>
                           <% if flash[:form_error] %><div class="flash_form_error"><p><%= flash[:form_error] %></p></div><% end %>
                         </div>
                         <% if current_user %>
                           <div style="float:right;">
                             <%= link_to 'Logout', logout_path %> |
                             <%= link_to 'Settings', edit_user_path(current_user) %> </div>
                         <% end %>
                         <%= yield %>
                    </div>
                    <!-- this nbsp is required to prevent showing an empty green line. -->
                    &nbsp;
                </div>

                <%= render :partial => "common/footer" %>
            </div>
        </div><!-- containter background left end -->
        
        </div>
    </body>
</html>
