<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Chatlino</title>
        <%= stylesheet_link_tag *(['main'] + @stylesheets) %>
        <%= javascript_include_tag :defaults %>
        <%= javascript_include_tag *(@javascripts) %>
    </head>

    <body id="<%= controller.controller_name %>">
        <%= render :partial => "common/header" %>
        <div id="<%= yullio_page_width %>" class="<%= yullio_column_template %>">
            <!-- #bd {{{ -->
            <div id="bd">
                <% if controller.controller_name == ('target' || 'dashboard') %>
                    <%= render :partial => "top" %>
                <% end %>
                <!-- #yui-main {{{ -->
                <div id="yui-main">
                    <div class="yui-b">
                      <div id="message">
                        <%= @message %>
                        <% if flash[:notice] %><div class="flash_notice"><p><%= flash[:notice] %></p></div><% end %>
                        <% if flash[:error] %><div class="flash_error"><p><%= flash[:error] %></p></div><% end %>
                        <% if flash[:form_error] %><div class="flash_form_error"><p><%= flash[:form_error] %></p></div><% end %>
                      </div>
                      <%= yield %>
                    </div>
                </div>
                <!-- END: #yui-main }}} -->

                <!-- .yui-b {{{ -->
                <% if yullio_column_template != 'yui-t7' %>
                <div class="yui-b">
                    <%= render :partial => "sidebar"%>
                </div>
                <% end %>
                <!-- END: .yui-b }}} -->
            </div>
            <!-- END: #bd }}} -->
            <%= render :partial => "common/footer" %>
        </div>
    </body>
</html>
