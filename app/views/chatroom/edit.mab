div :class => "yui-g" do

  form_tag( "/chatroom/create" ) {
    div do
      hidden_field "chatroom", "id"
      dl do
        dt { _"Title" }
        dd do
          text_field "chatroom", "title"
        end

        dt { _"Description" }
        dd do
          text_area "chatroom", "description"
        end
      end
      submit_tag _("Save")
    end
  }


end
